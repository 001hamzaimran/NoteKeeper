<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <!-- Form Section -->
        <div class="form text-white px-10 py-10 max-w-2xl mx-auto">
            <h1 class="text-3xl font-bold mb-6 text-center">Task Manager</h1>
            <form action="/create" method="POST" class="space-y-4">
                <input 
                    class="block px-5 bg-zinc-700 py-3 outline-none w-full rounded-lg focus:ring-2 focus:ring-blue-500"
                    type="text" placeholder="Task Title" name="title" required>
                <textarea
                    class="block px-5 bg-zinc-700 py-3 outline-none w-full rounded-lg focus:ring-2 focus:ring-blue-500"
                    name="task" placeholder="Task Description" required></textarea>
                <input
                    type="submit" value="Add Task"
                    class="w-full mt-4 bg-blue-700 px-5 py-3 rounded-lg text-white font-bold hover:bg-blue-800 transition-colors">
            </form>
        </div>

        <!-- Task Cards Section -->
        <div class="tasks px-10 py-10 max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div
                        class="task flex flex-col justify-between bg-zinc-700 p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                        <div class="title">
                            <h1 class="text-2xl font-bold text-white mb-4"><%= val.split(".")[0] %></h1>
                        </div>
                        <div class="action space-y-2">
                            <a href="/files/<%= val %>"
                                class="block bg-green-700 text-white text-center py-2 rounded-lg hover:bg-green-800 transition-colors">
                                Read Task
                            </a>
                            <a href="/edit/<%= val %>"
                                class="block bg-blue-700 text-white text-center py-2 rounded-lg hover:bg-blue-800 transition-colors">
                                Edit
                            </a>
                            <a href="/delete/<%= val %>"
                                class="block bg-red-700 text-white text-center py-2 rounded-lg hover:bg-red-800 transition-colors">
                                Delete
                            </a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <h1 class="text-2xl font-bold text-white text-center col-span-full">No Tasks</h1>
            <% } %>
        </div>
    </div>
</body>

</html>
