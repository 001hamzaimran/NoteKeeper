<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900 flex justify-center items-center">
        <div class="task bg-zinc-800 shadow-lg border border-zinc-700 rounded-lg w-3/4 max-w-lg px-6 py-8">
            <!-- Title Section -->
            <div class="title">
                <h1 class="text-3xl font-bold text-white tracking-wide border-b border-zinc-700 pb-3">
                    <%= title.split(".")[0] %>
                </h1>

                <!-- Task Content -->
                <p class="text-zinc-300 mt-4 leading-relaxed">
                    <%= content %>
                </p>

                <!-- Back Button -->
                <div class="mt-6">
                    <a href="/"
                        class="inline-block text-green-400 hover:text-green-500 bg-zinc-700 px-4 py-2 rounded-lg transition-colors duration-200">
                        Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
